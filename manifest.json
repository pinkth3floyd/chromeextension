{
  "manifest_version": 3,
  "name": "Nepali Calendar",
  "version": "1.0.0",
  "description": "A beautiful Nepali calendar extension with Bikram Sambat dates, holidays, and events",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "notifications",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Nepali Calendar",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/nepali-calendar.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "scripts/welcome.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 